<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f7f7f7;
    }
    
    .signup-container {
      max-width: 400px;
      margin: 0 auto;
      margin-top: 100px;
      padding: 20px;
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    .signup-container h2 {
      margin-bottom: 20px;
      text-align: center;
    }
    
    .signup-container form .form-group {
      margin-bottom: 20px;
    }
    
    .signup-container form label {
      font-weight: bold;
    }
    
    .signup-container form input[type="text"],
    .signup-container form input[type="email"],
    .signup-container form input[type="password"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    
    .signup-container form input[type="text"]:focus,
    .signup-container form input[type="email"]:focus,
    .signup-container form input[type="password"]:focus {
      outline: none;
      border-color: #80bdff;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .signup-container form button[type="submit"] {
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    
    .signup-container p {
      text-align: center;
      margin-top: 20px;
    }
    
    .alert {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="signup-container">
          <h2>Sign Up Form</h2>
          <form class="signup">
            <div class="form-group">
              <label for="username-input">Username</label>
              <input
                type="text"
                class="form-control"
                id="username-input"
                placeholder="Username"
              />
            </div>
            <div class="form-group">
              <label for="email-input">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email-input"
                placeholder="Email"
              />
            </div>
            <div class="form-group">
              <label for="password-input">Password</label>
              <input
                type="password"
                class="form-control"
                id="password-input"
                placeholder="Password"
              />
            </div>
            <div class="form-group">
              <label for="confirm-password-input">Confirm Password</label>
              <input
                type="password"
                class="form-control"
                id="confirm-password-input"
                placeholder="Confirm Password"
              />
            </div>
            <div style="display: none;" id="alert" class="alert alert-danger" role="alert">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <span class="sr-only">Error:</span>
              <span class="msg"></span>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>
          <br />
          <p>Or log in <a href="/login">here</a></p>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

<!-- Include the following script to handle the form submission and validation -->
<script>
  // Add an event listener to the form submission
  document.querySelector('.signup').addEventListener('submit', async function (event) {
    event.preventDefault(); // Prevent the default form submission

    // Get the input values
    const username = document.getElementById('username-input').value;
    const email = document.getElementById('email-input').value;
    const password = document.getElementById('password-input').value;
    const confirmPassword = document.getElementById('confirm-password-input').value;

    // Perform frontend validation
    if (username.trim() === '') {
      const errorMessage = "Username is required.";
      displayErrorMessage(errorMessage);
      return;
    }

    if (email.trim() === '') {
      const errorMessage = "Email is required.";
      displayErrorMessage(errorMessage);
      return;
    }

    if (password.trim() === '') {
      const errorMessage = "Password is required.";
      displayErrorMessage(errorMessage);
      return;
    }

    if (password !== confirmPassword) {
      const errorMessage = "Passwords do not match.";
      displayErrorMessage(errorMessage);
      return;
    }

    if (password.length < 6) {
      const errorMessage = "Password must be at least 6 characters";
      displayErrorMessage(errorMessage);
      return;
    }

    // Send an AJAX request to the signup route
    try {
      const response = await fetch('/api/auth', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ username, email, password }),
      });

      if (response.ok) {
        // Redirect the user to a logged-in page or perform any necessary actions
        window.location.href = '/';
      } else {
        const errorMessage = await response.json();
        displayErrorMessage(errorMessage.message); // Display the error message
        console.log(errorMessage.message); // Display the error message
      }
    } catch (error) {
      console.log(error);
    }
  });

  // Function to display the error message
  function displayErrorMessage(message) {
    const alertElement = document.getElementById('alert');
    const messageElement = alertElement.querySelector('.msg');
    messageElement.textContent = message;
    alertElement.style.display = 'block';
  }
</script>
