<!DOCTYPE html>
<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }
    
    h1, h2 {
      color: #333;
    }
    
    table {
      margin-bottom: 20px;
    }
    
    th {
      background-color: #f5f5f5;
    }
    
    #continueBrowsing, #confirmPurchase {
      margin-right: 10px;
    }
    
    #purchasesDiv {
      margin-top: 30px;
    }
    
    .modal {
      background-color: rgba(0, 0, 0, 0.5);
    }
    
    .modal-dialog {
      margin-top: 200px;
    }
    
    .modal-title {
      color: #fff;
    }
    
    .carousel-inner {
      margin-top: 30px;
    }
    
    .carousel-item img {
      max-width: 100%;
      height: auto;
    }
    
    .carousel-control-prev, .carousel-control-next {
      background-color: #333;
      width: 40px;
      height: 40px;
      top: 50%;
      transform: translateY(-50%);
    }
    
    .carousel-control-prev-icon, .carousel-control-next-icon {
      background-color: #fff;
    }
    
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
    .footer {
      margin-top: 30%;
    }
  </style>
</head>
<body>
  <div id="purchasesDiv">
    <h1 class="mt-5">Purchases history</h1>

    <!-- Purchases table -->
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Date Purchased</th>
          </tr>
        </thead>     
      </tbody>
    </table>
    {{#each orders}}
      <div class="order">
        <ul>
          {{#each books}}
            <li>{{book_title}}</li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>
